<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  
  xmlns:htext="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="webtech.com.ogocabdriver.ui.splash.SplashScreenActivity"
   
  
  >
    
    <!--
    android:background="@color/colorPrimary"
     android:background="@drawable/splash_bg"
        android:background="@drawable/blue_bg_design"
    -->
    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      
      >
      




    <RelativeLayout
        android:id="@+id/splashLogoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
     
     
        >
    
        <com.google.android.material.imageview.ShapeableImageView
          android:id="@+id/ivSplashLogo"
          android:layout_width="80dp"
          android:layout_height="80dp"
          android:adjustViewBounds="true"
          android:scaleType="fitXY"
          android:src="@drawable/ic_location"
          android:layout_centerHorizontal="true"
          />
    
        <!-- android:layout_below="@+id/ivSplashLogo" -->
        <RelativeLayout
          android:id="@+id/splashTextLayout"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:padding="5dp"
          android:layout_below="@+id/ivSplashLogo"
          >
    
    
    
            <com.google.android.material.textview.MaterialTextView
              android:id="@+id/tvSplashText"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:text="@string/splash_title"
              android:textAlignment="gravity"
              android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
              android:textColor="@color/black"
              android:layout_marginTop="15dp"
              />
         
            
        </RelativeLayout>


    </RelativeLayout>

    <!-- android:layout_centerInParent="true" -->
    
        <androidx.appcompat.widget.LinearLayoutCompat
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentBottom="true"
          android:layout_centerHorizontal="true"
          android:gravity="center"
          android:orientation="vertical"
          android:paddingBottom="@dimen/dimen_25dp"
          >
    
            <com.google.android.material.textview.MaterialTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:linksClickable="true"
              android:text="@string/splash_sub_title"
              android:textAlignment="gravity"
              android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                />
        
           <!-- <com.webtech.ogocabdriver.TextViewMontserratLight
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:text="@string/splash_from"
              android:textAlignment="gravity"
              android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
              android:textColor="@color/white"
              android:textStyle="bold"
          
              />-->
    
        </androidx.appcompat.widget.LinearLayoutCompat>


    </RelativeLayout>
</RelativeLayout>
